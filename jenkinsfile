pipeline {
    agent any
    environment {
        IMAGE_NAME = "ayaz5/your-app:latest"
        K8S_CLUSTER_NAME = "your-cluster-name"
        K8S_API_SERVER = "https://889D7D61CBE662FE8FC9FB6A947C719F.gr7.ap-southeast-1.eks.amazonaws.com"
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Dockerize') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'DOCKER_CREDENTIALS', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh '''
                    docker build -t $IMAGE_NAME .
                    echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                    docker push $IMAGE_NAME
                    '''
                }
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                withCredentials([string(credentialsId: 'K8S_TOKEN', variable: 'K8S_TOKEN')]) {
                    sh '''
            # Set cluster configuration
                    kubectl config set-cluster my-cluster --server=https://889D7D61CBE662FE8FC9FB6A947C719F.gr7.ap-southeast-1.eks.amazonaws.com

            # Set user credentials
                    kubectl config set-credentials jenkins-user --token=$K8S_TOKEN

            # Set context
                    kubectl config set-context my-context --cluster=my-cluster --user=jenkins-user

            # Use the context
                    kubectl config use-context my-context

            # Deploy to Kubernetes
                    kubectl apply -f kubernetes-deployment.yaml
                    '''
            }
         }
     }
   }
 }
