pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/ayazap/Devops.git'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Dockerize') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'DOCKER_CREDENTIALS', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                        sh '''
                            docker build -t ayaz5/your-app:latest .
                            docker login -u $DOCKER_USER -p $DOCKER_PASS
                            docker push ayaz5/your-app:latest
                        '''
                    }
                }
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                script {
                    withCredentials([string(credentialsId: 'k8s-token', variable: 'K8S_TOKEN')]) {
                        sh '''
                            echo "Using Kubernetes token: $K8S_TOKEN"
                            kubectl --token=$K8S_TOKEN apply -f k8s-deployment.yaml
                        '''
                    }
                }
            }
        }
    }
}
